<h1><%= Task.model_name.human(count: 2) %></h1>

<%= simple_search_form_for @ransack do |f| %>
  <%= f.input :name_cont %>
  <%= f.input :name_start %>
  <%= f.input :name_end %>
  <%= f.input :user_email_or_name_cont %>
  <%= f.input :user_id_or_user_email_or_user_password_cont %>
  <%= f.input :finished_eq, as: :select, collection: {"Finished" => "1", "Not finished" => "0"} %>
  <%= f.input :user_id_eq %>
  <%= f.input :user_id_eq_any, collection: {"Kasper" => 1, "Christina" => 2} %>
  <%= f.input :user_user_roles_role_eq %>
  <%= f.input :user_country_eq %>

  <% # Tests that it doesn't crash, but ignores, unreconized inputs, so it is possible to define ones own custom inputs. %>
  <%= f.input :custom_input %>

  <%= f.submit %>
<% end %>

<% @tasks.each do |task| %>
  <%= link_to task.name, task_path(task) %>
<% end %>
